@model TorrentSite.Areas.ViewModels.UserViewModel

@Html.HiddenFor(model => model.Id)

<div class="editor-label">
    @Html.LabelFor(model => model.Username)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Username)
    @Html.ValidationMessageFor(model => model.Username)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.RoleForAddingId)
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.RoleForAddingId, (IEnumerable<SelectListItem>)ViewData["roles"])
    @Html.ValidationMessageFor(model => model.RoleForAddingId)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.RoleForRemovingId)
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.RoleForRemovingId, (IEnumerable<SelectListItem>)ViewData["roles"])
    @Html.ValidationMessageFor(model => model.RoleForRemovingId)
</div>
